<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/demo_btn"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_link_field"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/demo_btn"
        android:layout_alignEnd="@+id/demo_btn"
        android:hint="New Link"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_name_field"
        android:hint="New Name"
        android:layout_below="@+id/new_link_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/demo_btn"
        android:layout_alignEnd="@+id/demo_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="SAVE"
        android:id="@+id/done_btn"
        android:layout_alignBottom="@+id/new_name_field"
        android:layout_toEndOf="@+id/new_link_field"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/new_link_field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/link_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/demo_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>